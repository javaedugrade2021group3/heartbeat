<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.edugrade.heartbeat.Controller.CustomerController">
    <children>

        <!-- Background image -->
      <ImageView fitHeight="600.0" fitWidth="1000.0" focusTraversable="true" layoutX="-1.0" nodeOrientation="INHERIT" pickOnBounds="true" AnchorPane.bottomAnchor="0.0">
         <image>
            <Image url="@../Assets/movies.jpg" />
         </image>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
      </ImageView>

        <!-- Buttons -->
        <!-- Search Button -->
        <Button fx:id="search_button" layoutX="140.0" layoutY="25.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="43.0" text="Sök">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
        </Button>

        <!-- Show all Button -->
        <Button fx:id="show_all_button" layoutX="23.0" layoutY="59.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="160.0" text="Visa alla kunder">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
        </Button>

        <!-- Update Button -->
        <Button fx:id="update_button" layoutX="896.0" layoutY="25.0" mnemonicParsing="false" text="Uppdatera" textFill="#031f3c" />

        <!-- Delete Button -->
        <Button fx:id="delete_button" layoutX="895.0" layoutY="119.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="77.0" style="-fx-background-color: #c2042a#c2042a;" text="Ta bort" textFill="#f4f4f5" />

        <!-- Create Button -->
        <Button fx:id="create_new_entry_button" layoutX="896.0" layoutY="72.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="76.0" text="Skapa ny" textFill="#031f3c" />

        <!-- Clear fields Button -->
        <Button fx:id="clear_fields_button" layoutX="832.0" layoutY="26.0" mnemonicParsing="false" text="Rensa" textFill="#031f3c" />

        <!-- TableView -->
        <TableView fx:id="customer_table" cacheShape="false" centerShape="false" layoutX="23.0" layoutY="163.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="381.0" prefWidth="954.0" scaleShape="false">
            <columns>
                <TableColumn prefWidth="60.0" text="Kund Id" />
                <TableColumn prefWidth="64.0" text="Affär Id" />
                <TableColumn prefWidth="99.0" text="Förnamn" />
                <TableColumn prefWidth="103.0" text="Efternamn" />
                <TableColumn minWidth="0.0" prefWidth="144.0" text="Email" />
                <TableColumn prefWidth="108.0" text="Adress Id" />
                <TableColumn minWidth="0.0" prefWidth="60.0" text="Aktiv" />
                <TableColumn prefWidth="133.0" text="Skapades" />
                <TableColumn prefWidth="123.0" text="Senast Uppdaterad" />
            </columns>
        </TableView>

        <!-- TextFields -->
        <TextField fx:id="tf_search" layoutX="23.0" layoutY="26.0" prefHeight="24.0" prefWidth="114.0" promptText="Sök efter kund id" />
        <TextField fx:id="tf_firstName" layoutX="535.0" layoutY="26.0" prefHeight="26.0" prefWidth="101.0" promptText="Förnamn" />
        <TextField fx:id="tf_lastName" layoutX="535.0" layoutY="72.0" prefHeight="26.0" prefWidth="101.0" promptText="Efternamn" />
        <TextField fx:id="tf_address" layoutX="657.0" layoutY="26.0" prefHeight="26.0" prefWidth="160.0" promptText="Adress" />
        <TextField fx:id="tf_store" layoutX="657.0" layoutY="72.0" prefHeight="26.0" prefWidth="160.0" promptText="Affär" />
        <TextField fx:id="tf_email" layoutX="535.0" layoutY="119.0" prefHeight="26.0" prefWidth="344.0" promptText="Email" />
        <TextField fx:id="tf_active" layoutX="832.0" layoutY="72.0" prefHeight="26.0" prefWidth="51.0" promptText="Aktiv" />
        <TextField fx:id="tf_id" alignment="CENTER" editable="false" layoutX="464.0" layoutY="26.0" prefHeight="26.0" prefWidth="51.0" promptText="Id" />

        <!-- Test Button to display values from the selected fields -->
        <Button fx:id="selected_button" layoutX="312.0" layoutY="86.0" mnemonicParsing="false" text="get selected values" />
    </children>

</AnchorPane>
